{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "CommonJS",
    "target": "ES6",
    "lib": ["es2015", "DOM", "DOM.Iterable"],
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "exclude": ["client"]
}
