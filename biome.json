{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",

  "organizeImports": {
    "enabled": false
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "ignore": ["node_modules", "dist", ".astro/**"]
  },
  "linter": {
    "ignore": ["node_modules", "dist", ".astro/**"],
    "enabled": true,
    "rules": {
      "all": true,
      "style": {
        "useBlockStatements": "off",
        "noDefaultExport": "off",
        "useNamingConvention": "off",
        "noNamespaceImport": "off",
        "useDefaultSwitchClause": "off"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": {
          "level": "warn",
          "options": {
            "maxAllowedComplexity": 30
          }
        }
      },
      "performance": { "noReExportAll": "off", "noBarrelFile": "off" },
      "nursery": { "useImportRestrictions": "off" },

      "correctness": {
        "noUndeclaredVariables": "off",
        "noNodejsModules": "off",
        "useExhaustiveDependencies": "info",
        "noUndeclaredDependencies": "off",
        "useImportExtensions": "off",
        "noUnusedImports": "warn"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noArrayIndexKey": "info",
        "noReactSpecificProps": "off",
        "noConsole": {
          "level": "warn",
          "options": { "allow": ["assert", "error", "info", "warn", "table"] }
        }
      }
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 100
    }
  },

  "files": {
    "ignore": ["node_modules", "dist", "routeTree.gen.ts"]
  }
}
