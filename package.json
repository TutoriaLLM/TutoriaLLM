{
  "name": "tutoriallm",
  "version": "2.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.6.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage.enabled true",
    "prepare": "pnpm simple-git-hooks",
    "format": "biome format . --write",
    "check": "biome check . --fix",
    "lint:repo": "sherif",
    "dev": "wireit",
    "type:check": "wireit",
    "build": "pnpm -r build",
    "spell-check": "cspell lint \"**\"",
    "commit": "cz"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm format && pnpm lint:repo && pnpm check && pnpm --filter ./apps/** type:check",
    "commit-msg": "pnpm commitlint --edit ${1}",
    "prepare-commit-msg": "cat $1 | pnpm commitlint -q || (exec < /dev/tty && node_modules/.bin/cz --hook || true)"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@vitejs/plugin-react": "4.4.1",
    "@vitest/coverage-v8": "3.2.3",
    "commitizen": "4.3.1",
    "cspell": "8.19.4",
    "cz-conventional-changelog": "3.3.0",
    "js-yaml": "catalog:",
    "jsdom": "26.1.0",
    "sherif": "1.5.0",
    "simple-git-hooks": "2.13.0",
    "vite-tsconfig-paths": "5.0.1",
    "vitest": "3.2.3",
    "wireit": "0.14.12"
  },
  "wireit": {
    "dev": {
      "dependencies": ["./apps/backend:dev", "./apps/frontend:dev"]
    },
    "type:check": {
      "dependencies": ["./apps/backend:type:check", "./apps/frontend:type:check"]
    }
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
